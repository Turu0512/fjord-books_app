<h2><%= Comment.model_name.human %></h2>
<table>
  <% if @comments != [] %>
  <thead>
    <tr>
      <th><%= User.model_name.human %></th>
      <th><%= Comment.human_attribute_name(:comment) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.display_user_name %></td>
        <td><%= comment.text %></td>
        <td><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
    <p><%= t('views.common.not_item', name: Comment.human_attribute_name(:comment)) %></p>
  <% end %>

</table>
